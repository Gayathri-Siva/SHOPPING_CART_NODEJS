<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <br>

        {{# each orders }}
            <div class="panel panel-default">

                <div class="panel-body">
                    <h3>My Orders</h3>
                    <hr>
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">&#x20B9; {{ this.price }}</span> {{ this.item.title }} | {{ this.qty }} Units
                            </li>
                        {{/each}}
                    </ul>
                </div>

                <div class="panel-footer">
                    <strong>Total Value: &#x20B9; {{ this.cart.totalPrice }}</strong><span class="pull-right">{{this.date}}</span>
                </div>

            </div>
        {{/each}}
    </div>
</div>