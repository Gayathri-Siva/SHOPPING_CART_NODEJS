
    <form action="/" method="GET" class="">
<div class="input-group col-md-6">
                    <input type="text" class="form-control input-lg" placeholder="Enter game name...." name="search"/>
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
      </form>
<br><br>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successmsg }}
        </div>
    </div>
</div>
<div class="container">
<h1>Games</h1>
{{# each products }}
<div class="row display-flex">
    {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail" class="img-responsive">
      <img src="{{this.imagePath}}" alt="...">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p class="description">{{this.description}}</p>
        <div class="pull-bottom"> 
            <div class="price pull-left">
                &#x20B9; {{this.price}}
            </div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  </div>
  <br>
{{/each}}
</div>
